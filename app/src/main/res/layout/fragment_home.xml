<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 聊天消息显示区域 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_message_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingVertical="4dp"
        android:scrollbars="none"
        android:overScrollMode="never"/>

    <!-- 输入区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@android:color/darker_gray">

        <!-- 语音输入按钮 -->
        <ImageButton
            android:id="@+id/voice_input_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_btn_speak_now"
            android:background="@android:color/transparent" />

        <!-- 文字输入框 -->
        <EditText
            android:id="@+id/message_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="输入消息"
            android:padding="8dp"
            android:background="@drawable/inputtext_border"
            android:scrollbars="vertical"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:textColor="@android:color/black"
            android:elevation="1dp"
            android:radius="8dp"
           />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/output_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/standard_voice"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="18dp"
            android:checked="true"/>

        <CheckBox
            android:id="@+id/output_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/answer_question"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="18dp"/>

        <!-- 文件按钮 -->
        <ImageButton
            android:id="@+id/more_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/plus"
            android:layout_weight="1"
            android:background="@android:color/transparent" />
        <!-- 发送按钮 -->
        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_up"
            android:layout_weight="1"
            android:background="@android:color/transparent" />
    </LinearLayout>
</LinearLayout>