<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/grey_100"
    android:padding="2dp"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@android:color/white"
        android:padding="8dp"
        android:elevation="4dp"
        android:radius="8dp">

        <!-- 模型 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:radius="8dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="@string/model"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_model"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:radius="8dp" />
        </LinearLayout>

        <!-- 情感 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:radius="8dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/btn_emotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emotion"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginRight="16dp" />

            <Spinner
                android:id="@+id/spinner_emotion"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:radius="8dp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- 语速 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:radius="8dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/btn_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speed"
                android:textSize="16sp"
                android:layout_marginRight="16dp"
                android:textColor="@android:color/black"
                />

            <Spinner
                android:id="@+id/spinner_speed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:radius="8dp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- 音频文件 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:radius="8dp"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/audioFile"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/audioFileTextView_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/noSelect"
                android:textSize="18sp"
                android:textColor="@android:color/black" />
            <!-- 选择音频文件按钮 -->
            <ImageButton
                android:id="@+id/btn_choose_audio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/plus_square"
                android:elevation="2dp"
                android:radius="8dp"
                android:contentDescription="@string/chooseAudioFile"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:radius="8dp"
            android:padding="16dp">



            <!-- 录音按钮 -->
            <ImageButton
                android:id="@+id/btn_record_audio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/record"
                android:elevation="2dp"
                android:radius="8dp"
                android:contentDescription="@string/recordButton"/>

            <!-- 录音计时器 -->
            <TextView
                android:id="@+id/recordingTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recordTime"
                android:textSize="18sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- 文本文件 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:radius="8dp"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/textFile"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/textFileTextView_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/noSelect"
                android:textSize="18sp"
                android:textColor="@android:color/black" />
            <!-- 选择文本文件按钮 -->
            <ImageButton
                android:id="@+id/btn_choose_file"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/plus_square"
                android:elevation="2dp"
                android:radius="8dp"
                android:contentDescription="@string/chooseTextFile"
             />
        </LinearLayout>



        <!-- 输入框 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:radius="8dp">

            <EditText
                android:id="@+id/inputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="216dp"
                android:layout_margin="16dp"
                android:hint="@string/inputText"
                android:textSize="18sp"
                android:padding="12dp"
                android:background="@android:color/white"
                android:scrollbars="vertical"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:gravity="top|start"
                android:textColor="@android:color/black"
                android:elevation="2dp"
                android:radius="8dp" />
        </ScrollView>

        <!-- 上传按钮 -->
        <ImageButton
            android:id="@+id/btn_upload"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/upload"
            android:elevation="2dp"
            android:radius="8dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            app:tint="@color/navy_blue_800"
            android:contentDescription="@string/uploadButton"/>
    </LinearLayout>
</ScrollView>