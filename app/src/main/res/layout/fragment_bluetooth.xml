<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 控制界面 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 蓝牙控制 -->
        <!-- 音频控制 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_scan_bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描蓝牙" />

            <Spinner
                android:id="@+id/spinner_bluetooth_devices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">
        <Button
            android:id="@+id/btn_connect_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接状态" />

        <TextView
            android:id="@+id/tv_bluetooth_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未连接" />
    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="播放控制"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_seekbwd"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:backgroundTint="@android:color/transparent"
                android:drawableLeft="@drawable/seekbwd"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|start"
                android:padding="12dp" />

            <Button
                android:id="@+id/btn_audprev"
                android:layout_width="56dp"
                android:layout_height="56dp"

                android:backgroundTint="@android:color/transparent"
                android:drawableLeft="@drawable/audprev"
                android:gravity="center"
                android:padding="22dp" />

            <Button
                android:id="@+id/btn_audplay"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:drawableLeft="@drawable/audplay"
                android:gravity="center"
                android:padding="26dp" />

            <Button
                android:id="@+id/btn_audstop"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:drawableLeft="@drawable/audstop"
                android:gravity="center"
                android:padding="26dp" />

            <Button
                android:id="@+id/btn_audnext"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:backgroundTint="@android:color/transparent"
                android:drawableLeft="@drawable/audnext"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|start"
                android:padding="12dp" />

            <Button
                android:id="@+id/btn_seekfwd"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:backgroundTint="@android:color/transparent"
                android:drawableLeft="@drawable/seekfwd"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|start"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>