<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 居中显示的 ImageView -->

    <!-- 控制界面 -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="269dp"
        android:layout_height="332dp"
        android:src="@drawable/music"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117" />

    <Button
        android:id="@+id/btn_audlist"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:backgroundTint="@android:color/transparent"
        android:drawableLeft="@drawable/audlist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btn_dispname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在播放:"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        <!-- 播放控制按钮 -->

        <TextView
            android:id="@+id/dispname"
            android:layout_width="39dp"
            android:layout_height="43dp"
            android:text="无"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/btn_dispname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btn_seekbwd"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:drawableLeft="@drawable/seekbwd"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|start"
                android:padding="12dp" />

            <Button
                android:id="@+id/btn_audprev"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:drawableLeft="@drawable/audprev"
                android:gravity="center"
                android:padding="17dp" />

            <Button
                android:id="@+id/btn_audplay"
                android:layout_width="63dp"
                android:layout_height="77dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/audplay"
                android:drawableLeft="@drawable/audplay"
                android:gravity="center" />

            <Button
                android:id="@+id/btn_audnext"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:drawableLeft="@drawable/audnext"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|start"
                android:padding="17dp" />

            <Button
                android:id="@+id/btn_seekfwd"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:drawableLeft="@drawable/seekfwd"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|start"
                android:padding="12dp" />

        </LinearLayout>

        <!-- 音量控制和播放模式 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/btn_audnext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btn_voludec"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:drawableLeft="@drawable/voludec"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|start"
                android:padding="12dp" />

            <Button
                android:id="@+id/btn_mode"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:drawableLeft="@drawable/modeoneplay"
                android:gravity="center"
                android:padding="15dp" />

            <Button
                android:id="@+id/btn_voluinc"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:drawableLeft="@drawable/voluinc"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|start"
                android:padding="12dp" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>