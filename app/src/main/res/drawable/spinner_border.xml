<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 自定义背景 -->
    <item>
        <!-- 假设 spinner_border 是你之前定义的背景形状 -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/grey_300" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <!-- 下拉箭头 -->
    <item
        android:gravity="end|center_vertical"
        android:right="16dp">
        <rotate
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%">
            <vector
                android:width="24dp"
                android:height="24dp"
                android:tint="@color/black_200"
                android:viewportHeight="24"
                android:viewportWidth="24">
                <path
                    android:fillColor="@color/light_blue_200"
                    android:pathData="M7,10l5,5l5,-5z" />
            </vector>
        </rotate>
    </item>
</layer-list>